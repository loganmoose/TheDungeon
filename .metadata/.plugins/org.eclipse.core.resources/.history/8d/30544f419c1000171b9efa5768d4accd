
public class Messagebox {
public void printBox(String Message, int format){
	
	int msgLength = Message.length ();
	System.out.print("+");
	for (int i=0; i < msgLength + 3; i++) {
		System.out.print("■");
	}
	System.out.print("+\n");
	
	
	// formatting for the text boxes so box will fit the text
	System.out.println("| "+ Message + " |");
	
	
	System.out.print("+");
	for (int i=0; i < msgLength + 3; i++) {
		System.out.print("■");
	}
	System.out.print("+\n");
}

public void bar(){
	
}

}
